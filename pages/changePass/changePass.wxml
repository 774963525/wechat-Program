<view class="container" style="margin-top:200px;">

  <text class="text-gray" style="margin-left:10px;">请设置您的密码</text>
  <view  style="margin-top:20px;" class="cu-form-group">
		<view class="title">原密码</view>
		<input placeholder="请输入旧密码" bindinput="oldPassword" password="true"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">新密码</view>
		<input placeholder="请输入新密码" bindinput="newPassword" password="true"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">确认密码</view>
		<input placeholder="请再输入新密码" bindinput="newPassword2" password="true"></input>
	</view>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="back">取消</button>
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap="submit">确认</button>
</view>